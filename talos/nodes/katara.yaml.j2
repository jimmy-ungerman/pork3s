---
machine:
  nodeLabels:
    topology.kubernetes.io/zone: m
  type: controlplane
---
apiVersion: v1alpha1
kind: HostnameConfig
hostname: katara
---
apiVersion: v1alpha1
kind: LinkAliasConfig
name: katara-to-aang
selector:
  match: link.driver == "thunderbolt-net" && link.bus_path == "1-1.0"
---
apiVersion: v1alpha1
kind: LinkConfig
name: katara-to-aang
addresses:
  - address: 169.254.255.21/32 # katara
mtu: 65520
routes:
  - destination: 169.254.255.20/32 # aang
    metric: 2048
up: true
---
apiVersion: v1alpha1
kind: LinkAliasConfig
name: katara-to-sokka
selector:
  match: link.driver == "thunderbolt-net" && link.bus_path == "0-1.0"
---
apiVersion: v1alpha1
kind: LinkConfig
name: katara-to-sokka
addresses:
  - address: 169.254.255.21/32 # katara
mtu: 65520
routes:
  - destination: 169.254.255.22/32 # sokka
    metric: 2048
up: true